<script>
    function checkValue(dom) {
        if (Number(dom.value) > Number({$proxy.balance})) {
            dom.value = Math.floor({$proxy.balance})
        }

        if (dom.value < 0) {
            dom.value = 0;
        }
        if (dom.value >50000){
            dom.value = 50000;
        }
    }


</script>
<script>
    layui.use(['layer','table','form', 'jquery', 'element'],function () {
        var layer = layui.layer
            , form = layui.form
            , table = layui.table
            , element = layui.element
            , $ = layui.$;
        $('#sure').on('click', function(e) {
            e.preventDefault();
            submitForm();
        });

        function submitForm() {
            if ($('#money').val() === '') {
                layer.msg('金额不能为空');
                return false
            }
            if ($('#money').val() < 100) {
                layer.msg('提现金额最低一百元起');
                return false;
            }
            if ($('#money').val() > 50000) {
                layer.msg('单次提现金额最高五万元');
                return false;
            }
            if ($('#money').val() <= 0) {
                layer.msg('请填写正确的金额')
                return false;
            }
            if ($('#settlementPassword').val() === '') {
                layer.msg("结算密码不能为空");
                return false;
            }
            // if ($('#code').val() === '') {
            //     layer.msg("验证码不正确");
            //     return false;
            // }
            // if ($('#code').val().length < 4) {
            //     layer.msg('验证码不正确');
            //     return false
            //
            // }
            var aliType = $("#bindali");
            var isAlibind = true;
            if (aliType.hasClass('layui-this')) {
                $('#type').val('1');
            } else {
                $('#type').val('2');
            }
            $.ajax({
                url: "{:url('settle/applySettlement')}",//'applySettlement',
                data: $("#myForm").serialize(),
                method: 'post',
                success: function (response) {
                    if (response.code !== 0 || response === true) {
                        layer.msg('提交结算成功');
                        cache.removeItem('submitCode');
                        window.setTimeout(function() {
                            window.location.reload();
                        }, 1000);

                    } else {
                        cache.removeItem('submitCode');
                        layer.msg(response.msg)

                    }
                }
            })
        }
    });
</script>
