{extend name="common/base" /}

{block name="title"}修改结算密码{/block}
{block name="content"}
<div class="layui-card">
    <div class="layui-card-header layuiadmin-card-header-auto">
        <h2>修改结算密码</h2>
    </div>

    <div class="layui-card-body">
        <form class="layui-form" id="myForm" action="resetSettlementPassword" method="post">
            <div class="layui-form-item">
                <label class="layui-form-label">新密码：</label>
                <div class="layui-input-inline">
                    <input type="password" id="password" name="password" lay-verify="required" placeholder="请输入新密码" autocomplete="off" class="layui-input">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">确认密码：</label>
                <div class="layui-input-inline">
                    <input type="password" id="passwordConfirm" name="password_confirm" lay-verify="required" placeholder="请确认新密码" autocomplete="off" class="layui-input">
                    <input type="hidden" name="_csrf"     value="463e94e8-17cb-457a-ab05-e77612b82cd7"/>
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label"></label>
                <div class="layui-input-inline">
                    <button id="sure" class="layui-btn" >确认修改</button>
                    <button class="layui-btn layui-btn-primary" type="reset">清空</button>
                </div>
            </div>
        </form>
    </div>
</div>

{/block}

{block name="script"}
<script src="__JS__/jquery.min.js?v=2.1.4"></script>
<script src="__JS__/bootstrap.min.js?v=3.3.6"></script>
<script src="__JS__/cache.js"></script>
<script src="__JS__/iosfit.js"></script>
<script>

    layui.use(['layer','table','form', 'jquery'],function () {
        var layer = layui.layer
            ,form = layui.form
            ,table = layui.table
            ,$    = layui.$;
        //用户表格初始化
        $('#sure').on('click', function(e) {
            e.preventDefault();
            toSubmit();
        });
        function toSubmit() {
            if ($('#password').val() !== $('#passwordConfirm').val()) {
                layer.msg('两次输入密码不一致');
                return false;
            }
            if ($('#password').val().length < 6) {
                layer.msg('密码至少六位')
                return false;
            }
            if ($('#password').val().length > 15) {
                layer.msg('密码小于十五位')
                return false;
            }
            $.ajax({
                url: "{:url('proxy/resetSettlementPassword')}",
                type: 'post',
                data: $('#myForm').serialize(),
                success: function (data) {
                    if (data) {
                        layer.msg('修改成功');
                        cache.removeItem('retrievePasswordCode');
                        window.setTimeout(function() {
                            window.location.href="checkaccount.html";
                        }, 1000);

                    } else {
                        layer.msg('原始密码不正确');
                    }
                }
            })
        }
    });
</script>
{/block}

