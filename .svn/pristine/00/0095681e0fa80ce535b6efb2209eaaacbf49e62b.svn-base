{extend name="common/base" /}

{block name="title"}{/block}
{block name="content"}
<div class="layui-row layui-col-space30">

    <div class="layui-col-md3 layui-col-lg3 layui-col-xs12 layui-col-sm6 ">
        <div class="layui-card">
        <div class="layui-card-header">
            总注册量
            <span class="layui-badge layui-bg-black layuiadmin-badge">全部</span>
        </div>
        <div class="layui-card-body layuiadmin-card-list">
            <p class="layuiadmin-big-font">{$regtotal}</p>
        </div>
        </div>
    </div>
    <div class="layui-col-md3 layui-col-lg3 layui-col-xs12 layui-col-sm6 ">
        <div class="layui-card">
        <div class="layui-card-header">
            今日注册
            <span class="layui-badge layui-bg-black layuiadmin-badge">今日</span>
        </div>
        <div class="layui-card-body layuiadmin-card-list">
            <p class="layuiadmin-big-font">{$regtoday}</p>
        </div>
        </div>
    </div>
    <div class="layui-col-md3 layui-col-lg3 layui-col-xs12 layui-col-sm6 ">
        <div class="layui-card">
        <div class="layui-card-header">
            总税收
            <span class="layui-badge layui-bg-black layuiadmin-badge">全部</span>
        </div>
        <div class="layui-card-body layuiadmin-card-list">
            <p class="layuiadmin-big-font">{$totaltax|number_format=2}</p>
        </div>
        </div>
    </div>

    <div class="layui-col-md3 layui-col-lg3 layui-col-xs12 layui-col-sm6 ">
        <div class="layui-card">
            <div class="layui-card-header">
                总收益
                <span class="layui-badge layui-bg-black layuiadmin-badge">全部</span>
            </div>
            <div class="layui-card-body layuiadmin-card-list">
                <p class="layuiadmin-big-font">{$alltt|number_format=2}</p>
            </div>
        </div>
    </div>
    <div class="layui-col-md3 layui-col-lg3 layui-col-xs12 layui-col-sm6 ">
        <div class="layui-card">
            <div class="layui-card-header">
                今日税收
                <span class="layui-badge layui-bg-orange layuiadmin-badge">今日</span>
            </div>
            <div class="layui-card-body layuiadmin-card-list">
                <p class="layuiadmin-big-font">{$todaytax|number_format=2}</p>
            </div>
        </div>
    </div>

    <div class="layui-col-md3 layui-col-lg3 layui-col-xs12 layui-col-sm6 ">
        <div class="layui-card">
            <div class="layui-card-header">
               代理总数
                <span class="layui-badge layui-bg-orange layuiadmin-badge">全部</span>
            </div>
            <div class="layui-card-body layuiadmin-card-list">
                <p class="layuiadmin-big-font">{$totalproxy}</p>
            </div>
        </div>
    </div>

    <div class="layui-col-md3 layui-col-lg3 layui-col-xs12 layui-col-sm6 ">
        <div class="layui-card">
            <div class="layui-card-header">
                今日新增代理
                <span class="layui-badge layui-bg-orange layuiadmin-badge">今日</span>
            </div>
            <div class="layui-card-body layuiadmin-card-list">
                <p class="layuiadmin-big-font">{$todayproxy}</p>
            </div>
        </div>
    </div>

    <div class="layui-col-md3 layui-col-lg3 layui-col-xs12 layui-col-sm6 ">
        <div class="layui-card">
            <div class="layui-card-header">
                今日代理提现
                <span class="layui-badge layui-bg-orange layuiadmin-badge">今日</span>
            </div>
            <div class="layui-card-body layuiadmin-card-list">
                <p class="layuiadmin-big-font">{$todaywithdraw|number_format=2}</p>
            </div>
        </div>
    </div>





    {volist name="list" id="vo"}
    <div class="layui-col-md12 layui-col-lg12 layui-col-xs12 layui-col-sm12 ">
        <div class="layui-card">
            <div class="layui-card-header">
                {$vo.addtime|date='Y-m-d H:i:s',###}
                <span class="layui-badge layui-bg-red layuiadmin-badge">{$vo.title}</span>
            </div>
            <div class="layui-card-body layuiadmin-card-list">
                <p class="layuiadmin-small-font">{$vo.content}</p>
            </div>
        </div>
    </div>
    {/volist}

</div>
{/block}


{block name="script"}

<script>
    layui.config({
        base: '/src/layuiadmin/' //静态资源所在路径
    }).extend({
        index: 'lib/index' //主入口模块

    }).use(['index', 'jquery'], function() {
        var $ = layui.$;
        var main = {
            bindEvent : function() {
                $('#getreward').on('click', function(e) {
                    e.preventDefault();
                    main.getReward();
                });
            },
            getReward : function() {
                $.ajax({
                    type: 'post',
                    url: "{:url('index/getRewardPre')}",
                    data: {},
                    success: function (data) {
                        if (data.code!==0) {
                            layer.msg(data.msg,{icon:2});
                            return false;
                        } else {
                            layer.confirm(data.msg+'，领取的奖励会存入您的余额中。', {
                                btn: ['确认领取','取消'] //按钮
                            }, function(){
                                $.ajax({
                                    type: 'post',
                                    url: "{:url('index/getReward')}",
                                    data: {},
                                    success: function(res) {
                                        if (res.code === 0) {
                                            layer.msg(res.msg,{icon:1});
                                            $('#getreward').removeClass('layui-btn-danger').addClass('layui-btn-disabled').html('<i class="layui-icon layui-icon-rmb"></i>红包已领取')
                                        } else {
                                            layer.msg(res.msg,{icon:2});
                                            return false;
                                        }
                                    }
                                });
                            });
                        }
                    }
                })
            }
        };
        main.bindEvent();
    });
</script>
{/block}


