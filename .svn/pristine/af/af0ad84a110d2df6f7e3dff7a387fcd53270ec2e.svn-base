{extend name="common/base" /}

{block name="title"}收入详情{/block}
{block name="css"}
<link rel="shortcut icon" href="favicon.ico">
<link href="__CSS__/bootstrap.min.css?v=3.3.6" rel="stylesheet">
<link href="__CSS__/font-awesome.min.css?v=4.4.0" rel="stylesheet">
<link href="__CSS__/footable.core.css" rel="stylesheet">
<link href="__CSS__/datepicker3.css" rel="stylesheet"/>
<link href="__CSS__/animate.css" rel="stylesheet">
<link href="__CSS__/style.css?v=4.1.0" rel="stylesheet">
<link href="__CSS__/bootstrap-table.css" type="text/css" rel="stylesheet">
{/block}
{block name="content"}
<div class="layui-card">
    <div class="layui-card-header layuiadmin-card-header-auto">
        <form class="layui-form" action="settlementLog" id="myForm" method="post">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <div class="layui-input-inline">
                        <select name="condition" id="condition" onchange="changeByCondition(this)">
                            <option value="" {if condition="$status eq ''"}selected="true"{/if}>全部</option>
                            <option value="1" {if condition="$status eq 1"}selected="true"{/if}>审核中</option>
                            <option value="2" {if condition="$status eq 2"}selected="true"{/if}>审核完成</option>
                            <option value="3" {if condition="$status eq 3"}selecteded="true"{/if}>支付驳回</option>
                            <option value="4" {if condition="$status eq 4"}selected="true"{/if}>已完成</option>
                            <option value="5" {if condition="$status eq 5"}selected="true"{/if}>银行处理中</option>
                        </select>
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">时间</label>
                    <div class="layui-input-inline" style="width: 100px;">
                        <input type="text" name="startTime" value="{$starttime}"  id="LAY-component-form-group-date" autocomplete="off" class="layui-input">
                    </div>
                    <div class="layui-form-mid">-</div>
                    <div class="layui-input-inline" style="width: 100px;">
                        <input type="text" name="endTime" value="{$endtime}" id="LAY-component-form-group-date2" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">支付宝</label>
                    <div class="layui-input-inline">
                        <input type="text" id="alipayAccount" name="alipayAccount" value="{$alipay}" placeholder="请输入支付宝账户"  autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">姓名</label>
                    <div class="layui-input-inline">
                        <input type="text" id="realName" name="realName" value="{$alipayname}"
                               placeholder="请输入支付宝真实姓名"  autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">代理ID</label>
                    <div class="layui-input-inline">
                        <input type="text" id="agentId" name="agentId" value="{$agentid}" placeholder="请输入代理ID"  autocomplete="off" class="layui-input">
                    </div>
                </div>

                <div class="layui-inline" style="text-align: center">
                    <button class="layui-btn" type="submit" id="search_tg">搜索</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                </div>
            </div>
        </form>
    </div>
    <div class="layui-card-body">
        <table id="tglist" lay-filter="tglist" >
            <thead id="hlist">
            <tr>
                <!--<th></th>-->

                <th data-toggle="true">结算单id</th>
                <th>时间 &nbsp;<p class="glyphicon glyphicon-menu-up" data-d='desc'
                                data-type="time"
                                onclick="orderByTime(this)">

                </th>
                <th>状态</th>
                <th>类型</th>
                <th>结算金额</th>
                <th>税收</th>
                <th>账号</th>
                <th>姓名</th>
                <th>代理ID</th>
                <th>备注</th>
                <th>信息</th>
                <th>操作</th>
            </tr>

            </thead>
            <tbody id="plist">
            {volist name="list" id="vo"}
            <tr>
                <!--<td>-->
                    <!--<label>-->
                        <!--<input type="checkbox"  value="{$vo.id}">-->
                    <!--</label>-->
                <!--</td>-->
                <td>{$vo.orderid}</td>
                <td>{$vo.createtime|date="Y-m-d H:i:s",###}</td>
                <td>
                    {if condition='$vo.status eq 1'}
                    审核中
                    {elseif condition='$vo.status eq 2'/}
                    审核通过
                    {elseif condition='$vo.status eq 3'/}
                    支付驳回
                    {elseif condition='$vo.status eq 4'}
                    已完成
                    {elseif condition='$vo.status eq 4'}
                    银行处理
                    {else/}
                    银行处理
                    {/if}

                </td>
                <td>
                    {if condition='$vo.checktype eq 1'}
                    支付宝
                    {else/}
                    银行卡
                    {/if}
                <td>{$vo.amount}</td>
                <td>{$vo.tax}</td>
                <td>
                    {if condition='$vo.checktype eq 1'}
                    {$vo.alipay}
                    {else/}
                    {$vo.bank}-{$vo.cardaccount}
                    {/if}
                </td>
                <td> {if condition='$vo.checktype eq 1'}
                    {$vo.alipay_name}
                    {else/}
                    {$vo.name}
                    {/if}</td>
                <td>{$vo.proxy_id}</td>
                <td>{$vo.descript}</td>
                <td></td>
                <td></td>
            </tr>
            {/volist}
            </tbody>
            <tfoot>
            <div>
                <td id="pageTd" rowspan="5">
                    <nav aria-label="Page navigation ">
                        {$list->render()}
                    </nav>
                </td>
            </div>
            </tfoot>

        </table>
        <input type="hidden" name="pageNum" id="pageNum"/>
        <input type="hidden" name="pageSize" id="pageSize" value="10"/>
        <input type="hidden" name="o" id="o" value=""/>
        <input type="hidden" name="d" id="d" value=""/>
        <input type="hidden" name="_csrf" value="edc8cd42-0c33-418c-bd1d-0c921c48e763"/>
    </div>
</div>
{/block}
{block name="script"}
<script src="__JS__/jquery.min.js?v=2.1.4"></script>
<script src="__JS__/bootstrap.min.js?v=3.3.6"></script>
<script src="__JS__/bootstrap-datepicker.js"></script>
<script src="__JS__/bootstrap-table.js"></script>
<script src="__JS__/common.js?v=1.1"></script>
<script src="__JS__/sweetalert.min.js"></script>
<script src="__JS__/toastr.min.js"></script>
<script src="__JS__/iosfit.js"></script>
<script>
    layui.config({
        base: '/src/layuiadmin/' //静态资源所在路径
    }).extend({
        index: 'lib/index' //主入口模块

    }).use(['index', 'table', 'layer', 'element', 'laydate', 'form', 'jquery'], function() {
        var laydate=layui.laydate;
        laydate.render({
            elem: '#LAY-component-form-group-date'
            ,format:'yyyy-MM-dd'
        });
        laydate.render({
            elem: '#LAY-component-form-group-date2'
            ,format:'yyyy-MM-dd'
        });
    });
    $(document).ready(function () {

        $('#pageTd').attr('colspan', 11);
        $('.option').click(function () {

            $('#msg').val($(this).text());
        })

    });


    function changeByCondition(url) {
        window.location.href = "settlementLog?condition=" + url.value;
    }

    function resubmit(dom) {
        if (confirm("确认提交？") === false) {
            return false;
        }
        $.ajax({
            url: dom.attributes['data'].value,
            method: 'get',

            success: function (response) {
                if (response === true && response.code !== 0) {
                    swal({
                            title: "提交成功!",
                            type: "success"
                        },
                        function () {
                            location.reload();
                        }
                    );
                } else {
                    swal({
                            title: response.msg === undefined ? response : response.msg,
                            text: '失败',
                            type: "error"
                        },
                        function () {
                            location.reload();
                        }
                    );
                }
            }
        })
    }

    function permitOrder(dom) {
        if ($("input[type='checkbox']:checkbox:checked").length < 1) {
            swal({
                    title: "请选择一项进行操作!",
                    type: "error"
                }
            );
            return false
        }

        swal({
            title: "确认通过?",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: '#DD6B55',
            confirmButtonText: '确定!',
            cancelButtonText: "取消!",
            closeOnConfirm: true,
            closeOnCancel: false
        }, function (isConfirm) {

            if (isConfirm) {
                permit()

            } else {
                swal("已取消");
            }
        })
        ;

    }

    function Order(key, value) {
        this.id = key;
        this.type = value;
    }

    function permit() {
        var token = $("meta[name='_csrf']").attr("content");
        var header = $("meta[name='_csrf_header']").attr("content");
        var args = [];

        $("input[type='checkbox']:checkbox:checked").each(function () {
            var id = $(this).val();
            var type = $(this).attr("data-type");
            var order = new Order(id, type);
            args.push(order)
        });
        if (args.length === 0) {
            swal({
                    title: "请选择一项进行操作!",
                    type: "error"
                }
            );
            return false;
        }
        args = JSON.stringify(args);
        $.ajax({
                url: "permitOrder",
                method: "post",
                beforeSend: function (request) {
                    request.setRequestHeader(header, token);
                },
                data: {args: args},
                success: function (response) {
                    if (response === true && response.code !== 0) {

                        location.reload();
                    }

                    else {
                        if (response.code === 0) {
                            toastr["error"](" ", response.msg)

                        } else {
                            toastr["error"](" ", "失败");

                            toastr.options = {
                                "closeButton": false,
                                "debug": true,
                                "newestOnTop": false,
                                "progressBar": false,
                                "positionClass": "toast-top-right",
                                "preventDuplicates": false,
                                "showDuration": "300",
                                "hideDuration": "1000",
                                "timeOut": "5000",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            }
                        }
                    }
                }
            }
        )
        ;

    }

    function refuse() {
        if ($("input[type='checkbox']:checkbox:checked").length < 1) {
            swal({
                    title: "请选择一项进行操作!",
                    type: "error"
                }
            );
            return false
        }

        $('#myModal2').modal('toggle');

    }

    function repairOrder() {
        if ($("input[type='checkbox']:checkbox:checked").length < 1) {
            swal({
                    title: "请选择一项进行操作!",
                    type: "error"
                }
            );
            return false
        }
        var args = [];
        $("input[type='checkbox']:checkbox:checked").each(function () {
            var id = $(this).val();
            var type = $(this).attr("data-type");
            var order = new Order(id, type);
            args.push(order)
        });
        if (confirm("确认恢复订单？恢复的订单将直接进入支付环节！") === false) {
            return false;
        }
        if (args.length < 1) {
            return false
        }
        args = JSON.stringify(args);
        var token = $("meta[name='_csrf']").attr("content");
        var header = $("meta[name='_csrf_header']").attr("content");
        $.ajax({
            url: "repairOrder",
            method: "put",
            beforeSend: function (request) {
                request.setRequestHeader(header, token);
            },
            data: {args: args},
            success: function (response) {
                if (response === true && response.code !== 0) {
                    swal({
                            title: '已恢复',
                            type: "success"
                        },
                        function () {
                            location.reload();
                        }
                    );
                } else {
                    if (response.code === 0) {
                        toastr["error"](" ", response.msg)

                    } else {
                        toastr["error"](" ", "失败");

                        toastr.options = {
                            "closeButton": false,
                            "debug": true,
                            "newestOnTop": false,
                            "progressBar": false,
                            "positionClass": "toast-top-right",
                            "preventDuplicates": false,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "5000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        }
                    }
                }
            }
        })

    }

    function refuseAndBan() {
        if ($("input[type='checkbox']:checkbox:checked").length < 1) {
            swal({
                    title: "请选择一项进行操作!",
                    type: "error"
                }
            );
            return false
        }
        if (confirm("确认拒绝并封号？") === false) {
            return false;
        }

        var id;
        var type;
        var args = [];
        $("input[type='checkbox']:checkbox:checked").each(function () {
            id = $(this).val();
            type = $(this).attr("data-type");
            var order = new Order(id, type);
            args.push(order)
        });
        if (args.length < 1) {
            return false
        }
        args = JSON.stringify(args);
        var token = $("meta[name='_csrf']").attr("content");
        var header = $("meta[name='_csrf_header']").attr("content");
        $.ajax({
            url: "refuseAndBan",
            method: "put",
            beforeSend: function (request) {
                request.setRequestHeader(header, token);
            },
            data: {args: args},
            success: function (response) {
                if (response === true && response.code !== 0) {
                    swal({
                            title: '已拒绝并封号',
                            type: "success"
                        },
                        function () {
                            location.reload();
                        }
                    );
                } else {
                    if (response.code === 0) {
                        toastr["error"](" ", response.msg)

                    } else {
                        toastr["error"](" ", "失败");

                        toastr.options = {
                            "closeButton": false,
                            "debug": true,
                            "newestOnTop": false,
                            "progressBar": false,
                            "positionClass": "toast-top-right",
                            "preventDuplicates": false,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "5000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        }
                    }
                }
            }
        })
    }

    function refuseOrder() {
        var token = $("meta[name='_csrf']").attr("content");
        var header = $("meta[name='_csrf_header']").attr("content");
        var id;
        var type;
        var args = [];
        $("input[type='checkbox']:checkbox:checked").each(function () {
            id = $(this).val();
            type = $(this).attr("data-type");
            var order = new Order(id, type);
            args.push(order)
        });
        args = JSON.stringify(args);
        $.ajax({
            url: "refuseOrder",
            method: "put",
            beforeSend: function (request) {
                request.setRequestHeader(header, token);
            },
            data: {args: args, msg: $('#msg').val()},
            success: function (response) {
                if (response === true && response.code !== 0) {
                    swal({
                            title: '已拒绝',
                            type: "success"
                        },
                        function () {
                            location.reload();
                        }
                    );
                } else {
                    if (response.code === 0) {
                        toastr["error"](" ", response.msg)

                    } else {
                        toastr["error"](" ", "失败");

                        toastr.options = {
                            "closeButton": false,
                            "debug": true,
                            "newestOnTop": false,
                            "progressBar": false,
                            "positionClass": "toast-top-right",
                            "preventDuplicates": false,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "5000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        }
                    }
                }
            }
        })
    }

    function getDetail(dom) {
        var id = dom.attributes['data'].value;
        $.ajax({
            url: 'getAgentDetail',
            data: {id: id},
            success: function (response) {
                var orderId = dom.attributes['data-order'].value;
                var money = dom.attributes['data-money'].value;
                if (response.code !== 0 || response !== true) {
                    var result = response.data;
                    var str = "<tr>";
                    str += "<th >代理id</th>";
                    str += "<th >" + result.agentId + "</th>";
                    str += "<th>订单id</th>";
                    str += "<th>" + orderId + "</th>";
                    str += "</tr><tr>";

                    str += "<th class='success'>总充值</th>";
                    str += "<th >" + result.recharge / 100 + "</th>";
                    str += "<th class='success'>总兑换金额</th>";
                    str += "<th >" + result.extractSum / 100 + "</th>";
                    str += "</tr><tr>";
                    str += "<th class='warning'>税收</th>";
                    str += "<th>" + result.revenue / 100 + "</th>";

                    str += "<th class='warning'>总收入</th>";
                    str += "<th>" + result.income / 100 + "</th>";

                    str += "</tr><tr>";
                    str += "<th>总注册量</th>";
                    str += "<th>" + result.reg + "</th>";

                    str += "<th>总提现金额</th>";
                    str += "<th>" + result.withdrawDeposit + "</th>";
                    str += "</tr><tr>";
                    str += "<th>收益比例(现在/最高)</th>";
                    str += "<th>" + result.royaltyRate + "%/" + result.maxRoyaltyRate + "%" + "</th>";
                    str += "</tr><tr>";
                    str += "<th class='success'>账户余额</th>";
                    str += "<th>" + result.money / 100 + "</th>";
                    str += "<th >本次提现金额</th>";
                    str += "<th>" + money + "</th>";


                    str += "</tr><tr>";
                    str += "<th >信息</th>";
                    str += "<th>" + result.msg + "</th>";
                    str += "</tr>";
                    $('#detail').html(str);
                    id = dom.attributes['data-order'].value;
                    $("[data-order='" + id + "']").prop('checked', true);
                    $("#getChannel").attr("href", "getChannel?agentId=" + result.agentId);

                } else {
                    swal({
                            title: response.msg === undefined ? response : response.msg,
                            text: '失败',
                            type: "error"
                        },
                        function () {
                            location.reload();
                        }
                    );
                }
            }
        });
        $('#myModal').modal('toggle');
    }

</script>
</script>
{/block}